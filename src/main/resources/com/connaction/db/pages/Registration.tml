<html t:type="layout" title="connaction-db com.example"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="span4 offset3">
        <form t:type="form" t:id="registration">
            <h2>Please register new account</h2>
            <input t:type="textfield" t:id="username" class="input-block-level" validate="required" placeholder="Username"/>
            <input t:type="passwordfield"   t:id="password" class="input-block-level" validate="required" placeholder="Password"/>
            <select t:type="select"  t:model="listGropus" t:value="group"  t:blankLabel="Groups..." ></select>
            
            <t:submit class="btn btn-large btn-primary"  value="Sign in"/>
        </form>
    </div>
</div>

</html>